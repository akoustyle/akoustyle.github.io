<div class="banner">
    <div class="container">
      <h1>Find all my projects and inspirations here !</h1>
      <p>Learn to code change my life</p>
    </div>
  </div>

<div class="features">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="section-heading">Projects</h1>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-md-12 col-sm-6 col-md-4">
            <% @projects.each do |project| %>
              <%= link_to project_path(project) do %>
              <div class="feature" >
              <%= cl_image_tag project.photo.key, height: 500, width: 600, crop: :fill  %>
                <div class="feature-title">
                  <%= project.name %>
                </div>
              </div>
              <% end %>
            <% end %>
          </div>
      </div>
    </div>
